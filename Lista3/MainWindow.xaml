<Window x:Class="Lista3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lista3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dataGridGame" Margin="-4,0,4,0">
        </DataGrid>

        <Button Width="100" Height="50" Click="Button_Click" Grid.Row="1" Content="Dodaj" Margin="10,50,690,45"/>

        <Button Width="100" Height="50" Click="Button_Click_1" Grid.Row="1" Content="Właściwości" Margin="10,145,690,95" Grid.RowSpan="2" />
    </Grid>
</Window>
